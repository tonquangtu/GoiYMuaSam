<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".actiivity.ProductListInHotCatalogActivity"
    android:id="@+id/product_list_in_catalog_place_holder"
    android:background="@color/back_ground_UI"
    android:fitsSystemWindows="true"
    >


    <android.support.v7.widget.Toolbar
        android:id="@+id/product_list_in_hot_catalog_toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_alignParentTop="true"
        android:elevation="4dp"
        >
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/product_list_in_hot_catalog_place_holder"
        android:layout_below="@+id/product_list_in_hot_catalog_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>



</RelativeLayout>

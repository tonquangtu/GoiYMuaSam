<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mycompany.mainui">


    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key" />
        <!-- Facebook activity -->
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name"/>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider1711662425766390"
            android:exported="true" />

        <activity android:name=".actiivity.MainActivity" />
        <activity android:name=".actiivity.CommentActivity" />
        <activity
            android:name=".actiivity.SplashActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".actiivity.ProductListInHotCatalogActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".actiivity.ProductDetailActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".actiivity.ProductListInAdActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".actiivity.ShopDetailActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".actiivity.NavigationCatalogActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".actiivity.SearchResultsActivity"
            android:launchMode="singleTop"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <provider
            android:name=".provider.SearchSuggestionProvider"
            android:authorities="com.mycompany.mainui.provider.SearchSuggestionProvider"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".actiivity.ProductListInSalesActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".actiivity.ShopListInSalesActivity" />
        <activity
            android:name=".actiivity.ProductListInCatalogActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".actiivity.SearchSuggestActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".actiivity.SearchResultProductActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".actiivity.SearchResultShopActivity"
            android:theme="@style/NoActionBar" />

        <activity android:name=".actiivity.LoginNormalActivity"
            android:theme="@style/NoActionBar"/>
        <activity android:name=".actiivity.AccountActivity">
        </activity>

        <activity android:name=".actiivity.MapActivity">

        </activity>
    </application>

</manifest>
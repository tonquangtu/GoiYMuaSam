<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actiivity.MainActivity">

    <RelativeLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- ToolBar -->
        <!--<include-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--layout="@layout/toolbar"/>-->

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            app:popupTheme="@style/popupToolbarTheme"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="@color/colorPrimary">

            <RelativeLayout

                android:clickable="true"
                android:layout_marginRight="46dp"
                android:gravity="left"
                android:orientation="horizontal"
                android:id="@+id/tool_search_main"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/background_tool_search">

                <TextView

                    android:layout_toRightOf="@+id/icon_search"
                    android:id="@+id/edit_search_main"
                    android:background="@null"
                    android:layout_marginLeft="8dp"
                    android:padding="8dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_400"
                    android:hint="@string/hint_search_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView

                    android:clickable="false"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/icon_search"
                    android:scaleType="fitCenter"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon_search4"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

            </RelativeLayout>


        </android.support.v7.widget.Toolbar>



        <com.mycompany.mainui.CustomViewPager
            android:layout_below="@+id/toolbar"
            android:background="@color/back_ground_UI"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <!--app:tabIndicatorColor="@color/tabLayout_indicator"-->
        <!--app:tabIndicatorColor="@color/blue_grey_300"-->
        <!--android:background="@color/tabLayout_background"-->

        <!--This is tab at bottom, it is tab of actionbar or tabtrip of viewpager
        It is go with view pager, tablayout is place any where,
        It is very good for design layout have tab at bottom or any where in screen
        At the moment, people often use to tablayout for material design
        It have tabs, a tab with a pager of viewpager-->
        <android.support.design.widget.TabLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/tab_layout"
            app:tabMode="fixed"
            app:tabIndicatorColor="@color/white"
            app:tabIndicatorHeight="2dp"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@color/tabLayout_background" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_view"
        android:id="@+id/navigation_view_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemIconTint="@color/blue_600"
        app:itemTextColor="@color/black"
        android:background="@color/back_ground_navigation" >
        <include layout="@layout/nav_header"/>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

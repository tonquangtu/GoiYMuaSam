<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/back_ground_UI"
    tools:context="com.mycompany.mainui.actiivity.SearchSuggestActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        app:popupTheme="@style/popupToolbarTheme"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary">

        <RelativeLayout

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Spinner
                android:id="@+id/spiner_search_type"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="@color/white"
                android:popupBackground="@color/white"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:layout_width="40dp"
                android:layout_height="wrap_content">

            </Spinner>

            <Button

                android:id="@+id/btn_cancel_search"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/spiner_search_type"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                android:text="@string/cancel_search"
                android:layout_marginLeft="8dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content" />

            <LinearLayout

                android:id="@+id/tool_search_main"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_toLeftOf="@+id/btn_cancel_search"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/background_tool_search">

                <ImageView
                    android:layout_marginLeft="8dp"

                    android:id="@+id/icon_search"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon_search4"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <EditText

                    android:id="@+id/edit_search"
                    android:layout_toRightOf="@+id/icon_search"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:background="@null"
                    android:layout_marginLeft="8dp"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey_400"
                    android:hint="@string/hint_search_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/toolbar"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:id="@+id/recycler_suggest_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>






</RelativeLayout>

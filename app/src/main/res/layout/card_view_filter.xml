<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_filter_price"
        android:text="@string/txt_filter_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <ImageButton
        android:src="@drawable/icon_filter_price"
        android:id="@+id/ibtn_filter_price"
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/colorPrimary"
        android:layout_width="2dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_filter_sales"
        android:text="@string/txt_filter_sales"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/ibtn_filter_sales"
        android:scaleType="centerInside"
        android:src="@drawable/icon_filter_sales2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>